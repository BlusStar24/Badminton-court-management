@{ Response.ContentEncoding = System.Text.Encoding.UTF8; }
@{ Response.Charset = "utf-8"; }
@{ Layout = null; }
<body>
    <div class="login">
        <form action="@Url.Action("Register", "Account")" method="POST" accept-charset="UTF-8" class="form-atri">
            <h1 class="text-2xl font-bold">Đăng Ký Tài Khoản Khách Hàng</h1>

            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="error-message">@ViewBag.Message</div>
            }

            <div class="input-group">
                <i class="fas fa-user"></i>
                <input type="text" name="HoTen" id="hoten" placeholder="Họ và tên" required>
            </div>

            <div class="input-group">
                <i class="fas fa-phone"></i>
                <input type="text" name="SoDienThoai" id="sodienthoai" placeholder="Số điện thoại (10 chữ số)" required pattern="\d{10}">
            </div>

            <button type="submit">Đăng Ký</button>
            <div class="register-link mt-4">Đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập ngay</a></div>
        </form>
    </div>
</body>

<style>
    .login {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f0f4ff, #c9e8ff);
    }

    .form-atri {
        padding: 40px;
        width: 400px;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    h1 {
        color: #2c3e50;
        margin-bottom: 20px;
    }

    .error-message {
        color: #e74c3c;
        font-size: 0.95rem;
        margin-bottom: 15px;
        font-weight: bold;
    }

    label {
        color: #34495e;
        font-weight: 600;
        font-size: 0.95rem;
    }

    .input-group {
        position: relative;
        margin-bottom: 1rem;
    }

        .input-group i {
            position: absolute;
            top: 50%;
            left: 30px;
            transform: translateY(-50%);
            color: #bdc3c7;
            font-size: 1.2rem;
        }

        .input-group input {
            width: 100%;
            padding: 10px 10px 10px 40px;
            border: 1px solid #bdc3c7;
            border-radius: 8px;
            background: #f5f5f5;
            transition: border-color 0.3s, background-color 0.3s;
            font-size: 0.95rem;
        }

            .input-group input:focus {
                border-color: #3498db;
                background: #e9f4fc;
                outline: none;
            }

    button {
        width: 100%;
        padding: 12px;
        font-size: 1rem;
        border-radius: 8px;
        background-color: #27ae60;
        color: white;
        font-weight: bold;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button:hover {
            background-color: #219150;
        }

    .register-link {
        color: #3498db;
        transition: color 0.3s;
        font-size: 0.9rem;
    }

        .register-link:hover {
            color: #2980b9;
        }
</style>